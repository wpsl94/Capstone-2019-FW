<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >



    <item android:state_pressed="true">

        <!--image대신 직접 selector를 그리겠다고 선언한다. -->
        <shape >

            <solid android:color="@color/grey"/>
            <stroke android:width="1sp" android:color="@color/white"/>
            <!--각 모서리의 라운드 처리 - 값이 클수록 라운드의 각이 커진다.-->
            <corners android:radius="6dp"></corners>

        </shape>
    </item>

    <!--위와 동일하다.
    -->
    <item android:state_pressed="false">
        <shape >
            <!--도형안에 채워질 색을 정의한다.-->
            <solid android:color="@color/graynavy"/>

            <!-- width = 테두리 선의 굴기, color = 테두리 선의 색을 정의한다.-->
            <stroke android:width="2dp" android:color="@color/grey"/>

            <corners android:radius="6dp"></corners>
        </shape>
    </item>
</selector>